<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp"
              android:background="@drawable/border"
              xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_result"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_result_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="1dp"
                android:textColor="@color/colorLink"
                tools:text="Электричество (Физика 8)" />

            <TextView
                android:id="@+id/list_item_result_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="1dp"
                android:textColor="@color/colorPrimaryDark"
                tools:text="Иван Петров (ipetrov)"/>

            <TextView
                android:id="@+id/list_item_result_right_pcnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="1dp"
                tools:text="Правильных ответов: 67%"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>